<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:padding="20dp"
    android:gravity="center"><!-- padding으로 자식 레이아웃들을 부모에게서 떨어지게 할 수 있음 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyPeng"
            android:textSize="70dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputEditText_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/basic_stroke"
        android:padding="5dp"> <!-- Email-->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="id">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        ></EditText>-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputEditText_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/basic_stroke"
        android:padding="5dp">>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="password">
            <!--클릭했을 때 힌트가 위로 올라가는 효과가 있음-->
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        ></EditText>-->

    <LinearLayout
        android:id="@+id/Login_Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_purple"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingLeft="12dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingRight="12dp">

        <!-- Linear Layout을 통한 버튼 만들기 (이미지 삽입한 버튼)-->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_icon"></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="로그인"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            ></TextView>
    </LinearLayout>
</LinearLayout>